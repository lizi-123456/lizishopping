    <script>
        $(function () {
            $("#goumai").click(function () {
                if (localStorage.getItem("userid") == null) {
                    if (confirm("还没有登录，暂无法购买此商品，点击确定登陆您的账号")) {
                        window.location.href = "/loginRegister/Login";
                    }
                    else {

                    }
                }
                else {
                    var SKUId = $(this).attr("title");

                    var item = 0;
                    var obj = document.getElementsByName("inlineRadioOptions")
                    for (var i = 0; i < obj.length; i++) { //遍历Radio 
                        if (obj[i].checked) {
                            item = obj[i].value;
                        }
                    }
                    window.location.href = "/zhuye/checkout?SKUId=" + SKUId + "&UserID=" + localStorage.getItem("userid") + "&ColorID=" + item;

                }
            })

            $("#shoppcart").click(function () {
                if (localStorage.getItem("userid") == null) {
                    if (confirm("还没有登录，暂无法添加购物车，点击确定登陆您的账号")) {
                        window.location.href = "/loginRegister/Login";
                    }
                    else {

                    }
                }
                else {
                    var SKUId = $(this).attr("title");
                    var UserID = localStorage.getItem("userid");

                    $.ajax({
                        url: "/zhuye/shopcartinfo",
                        type: "POST",
                        data: { "SKUId": SKUId, "UserID": UserID },
                        success: function (data) {
                            if (data == "true") {
                                alert("添加购物车成功")
                            }
                            if (data == "false") {
                                alert("添加购物车失败")
                            }
                        }
                    });
                }
            })
        })
    </script>
