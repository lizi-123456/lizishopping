
@{
    ViewBag.Title = "serach_pro";
    Layout = "~/Views/Shared/_muban.cshtml";
}

<!--shop header area start-->
<div class="shop_header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>您的搜索结果如下：</h1>
            </div>
        </div>
    </div>
</div>
<!--shop header area end-->
<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/zhuye/Index">主页</a></li>
                        <li>/</li>
                        <li>搜索结果</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--shop  area start-->
<div class="shop_area shop_reverse">
    <div class="container">
        <!--shop toolbar start-->
        <div class="row">
            <div class="col-12">
                <div class="shop_toolbar">
                    <div class="list_button">
                        <ul class="nav" role="tablist">
                            <li>
                                <a class="active" data-toggle="tab" href="#large" role="tab" aria-controls="large" aria-selected="true"><i class="fa fa-th"></i> Grid</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#list" role="tab" aria-controls="list" aria-selected="false"><i class="fa fa-th-list"></i> List</a>
                            </li>
                        </ul>
                    </div>
                    <div class="select_option">
                        <form class="niceselect_option" action="#">
                            <select name="orderby" id="short">
                                <option selected value="1">Sort by popularity</option>
                                <option value="1">Sort by average rating</option>
                                <option value="1">Sort by newness</option>
                                <option value="1">Sort by price: low to high</option>
                                <option value="1">Sort by price: high to low</option>
                                <option value="1">Product Name: Z</option>
                            </select>
                        </form>
                        <div class="page_amount">
                            <p>Showing 1–9 of 21 results</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--shop toolbar end-->
        <!--shop tab product start-->
        <div class="tab-content">
            <div class="tab-pane grid_view fade show active" id="large" role="tabpanel">
                <div class="row">
                    @foreach (var item in ViewData["pro_serach"] as List<栗子商城.Models.selpro_detials_SKUGoodName_Result>)
                    {
                        <div class="col-lg-3 col-md-4">
                            <div class="single_product">
                                <div class="product_thumb">
                                    <a href="/zhuye/pro_details?SKUId=@item.SKUId"><img src="https://cdn.lizixs.top/img/lizishopping/img/product/@item.GoodPhoto" alt="" style="height:320px;width:270px"></a>
                                    <div class="product_hover">
                                        <div class="product_ratting">
                                            <ul>
                                                <li><a href="#"><i class="fa fa-star"></i></a></li>
                                                <li><a href="#"><i class="fa fa-star"></i></a></li>
                                                <li><a href="#"><i class="fa fa-star"></i></a></li>
                                                <li><a href="#"><i class="fa fa-star"></i></a></li>
                                                <li><a href="#"><i class="fa fa-star"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="product_action">
                                            <div class="action_button">
                                                <ul>
                                                    <li><a class="add_links Wishlist" href="javascript:void(0)" title="@item.SKUId" onclick="add_shoucang(this)"><i class="fa fa-heart"></i></a></li>
                                                    <li><a class="add_to_cart" href="/zhuye/pro_details?SKUId=@item.SKUId">查看详情</a></li>
                                                    <li><a class="add_links Compare" href="javascript:void(0)" title="Add to Compare"><i class="fa fa-retweet"></i></a></li>
                                                </ul>
                                            </div>
                                            <div class="quick_button">
                                                <a href="#" data-toggle="modal" data-target="#modal_box"class="motaikuang_xiangqing" title="@item.SKUId"><i class="fa fa-eye"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="product_content">
                                    <h3><a href="/zhuye/pro_details?SKUId=@item.SKUId">@item.SKUGoodName</a></h3>
                                    <span class="current_price">£@item.GoodPrice</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="tab-pane list_view fade" id="list" role="tabpanel">

                @foreach (var item in ViewData["pro_serach"] as List<栗子商城.Models.selpro_detials_SKUGoodName_Result>)
                {
                    <div class="product_list_item">
                        <div class="row align-items-center">
                            <div class="col-lg-4 col-md-4">
                                <div class="product_thumb">
                                    <a href="/zhuye/pro_details?SKUId=@item.SKUId">
                                        <img class="primary_img" src="https://cdn.lizixs.top/img/lizishopping/img/product/@item.GoodPhoto" alt="Product Image">
                                    </a>

                                </div>
                            </div>
                            <div class="col-lg-8 col-md-8">
                                <div class="product_content">
                                    <div class="product_name">
                                        <h2><a href="product-details.html">@item.SKUGoodName</a></h2>
                                    </div>
                                    <div class="product_ratting">
                                        <ul>
                                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                                            <li><a href="#"><i class="fa fa-star"></i></a></li>

                                            @*
                                                    星级评价
                                                    @for (int i = 0; i < 2; i++)
                                                {
                                                <li><a href="#"><i class="fa fa-star"></i></a></li>
                                                }*@
                                        </ul>
                                    </div>

                                    <div class="product_price">
                                        <span class="current_price">价格：</span>
                                        <span class="current_price">$@item.GoodPrice</span>
                                    </div>
                                    <div class="product_desc">
                                        <p>@item.Goods_Description</p>
                                    </div>

                                    <div class="product_action">
                                        <ul>
                                            <li><a class="button" href="/zhuye/pro_details?SKUId=@item.SKUId" title="add to cart">查看详情</a></li>
                                            <li><a class="button_link" href="#" title="Add to wishlist"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                                            <li><a class="button_link" href="#" title="Compare"><i class="fa fa-retweet"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!--shop tab product end-->
    </div>
</div>
<!--shop  area end-->

